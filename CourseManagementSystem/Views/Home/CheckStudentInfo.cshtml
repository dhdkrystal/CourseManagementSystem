<!doctype html>
<html>
<head>
    <meta charset="UTF-8">
    <title>Untitled Document</title>
    <link rel="stylesheet" href="http://cdn.static.runoob.com/libs/bootstrap/3.3.7/css/bootstrap.min.css">
    <script src="http://cdn.bootcss.com/jquery/3.2.1/jquery.min.js"></script>
    <link href="~/Content/CheckStudentInfo.css" rel="stylesheet" type="text/css">
    <!-- Bootstrap -->
</head>

<body>
    <div class="box5">
        <img class="user" src="~/Content/images/user.png" />
        <div class="unbindTip">点击头像修改</div>
        <img src="~/Content/images/background.jpg" class="Picture" />
        <div class="name" id="name"></div>
        <div class="teacherID" id="number"></div>
    </div>
    <div class="mainView">
        <div class="phone1" id="phone"></div>
        <div class="ID" id="number1"></div>
        <div class="school1" id="school"></div>
        <div class="name1" id="name1"></div>
        <button class="exitBtn" id="signout">退出登录</button>
        <button class="UnbindBtn" id="unbind">解绑账号</button>
    </div>
</body>
</html>

<script>
    $(document).ready(function () {
        $.ajax({
            url: '/me',
            type: 'GET',
            success: function (data) {
                $('#name').append(data.Name);
                $('#name1').append(data.Name);
                $('#number').append(data.Number);
                $('#number1').append(data.Number);
                $('#phone').append(data.Phone);
                $('#school').append(data.School);
            },
            error: function (data) {
                alert("加载学生信息出错");
            }
        })
    });
</script>


