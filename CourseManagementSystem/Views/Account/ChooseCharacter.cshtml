<!doctype html>
<html>
<head>
    <meta charset="UTF-8">
    <title>Untitled Document</title>
    <link href="~/Content/ChooseCharacter.css" rel="stylesheet" type="text/css">
    <script src="http://cdn.bootcss.com/jquery/3.2.1/jquery.min.js"></script>
    <!-- Bootstrap -->
</head>

<body>
    <div class="topBoardView" >
        <!-- 背景图的div -->
        <img  width="100%" height="250px" src="~/Content/images/head-background.jpg" position="absolute">
        <img class="topLight" src="~/Content/images/灯.svg">
		<div class="topTips">请选择您的账号类型</div>
		<div class="topLine"/>
        
    </div>
 <div class="mainView">
    <button class="teacherButton" id="teacherButton">老师</button>
    <button class="studentButton" id="studentButton">学生</button>
 </div>  
 

    <script>
        $(document).ready(function () {
            $("#teacherButton").click(function () {
                var type = '老师';
                $.ajax({
                    url: '/me',
                    type: 'PUT',
                    data: JSON.stringify({
                        type: type
                    }),
                    dateType: 'json',
                    success: function (data) {
                        document.location.href = '/Account/TeacherBindingUI';
                    },
                    error: function (mesg) {
                        alert(mesg);
                    }
                });
            });
        });
    </script>
    <script>
        $(document).ready(function () {
            $("#studentButton").click(function () {
                var type = '学生';
                $.ajax({
                    url: '/me',
                    type: 'PUT',
                    data: JSON.stringify({
                        type: type
                    }),
                    dateType: 'json',
                    success: function (data) {
                        document.location.href = '/Account/studentBindingUI';
                    },
                    error: function (mesg) {
                        alert(mesg);
                    }
                });
            });
        });
    </script>


	
</body>


</html>



