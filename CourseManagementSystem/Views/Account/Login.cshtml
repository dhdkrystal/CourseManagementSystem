<!doctype html>
<html>
<head>
    <meta charset="UTF-8">
    <title>Untitled Document</title>
    <script src="http://cdn.bootcss.com/jquery/3.2.1/jquery.min.js"></script>

    <link href="~/Content/LoginUI.css" rel="stylesheet" type="text/css">
    <!-- Bootstrap -->
</head>

<body>
    <div class="topBoardView" >
        <!-- 背景图的div -->
        <img  width="100%" height="250px" src="~/Content/images/head-background.jpg" position="absolute">
        <img class="topLight" src="~/Content/images/灯.svg">
		<div class="topTips">请先登录</div>
		<div class="topLine"/>
        
    </div>
    <div class="mainView">
        <div class="login-box-body">
            <form action="#" method="post">
                <label for="phone" class="phoneID">手机号：</label>
                <input type="text" class="inputPhoneID" id="phone" />
                <label for="password" class="password">密码：</label>
                <input type="password" id="password"  class="inputPassword"/>
            </form>
        </div>
        <button type="submit" class="confirmButton" id="login">登录</button>
        <div class="tip1">还没有账号？</div>
        <div class="tip2">请先注册</div>
    </div>  
	
    <script>
        $(document).ready(function () {
            $("#login").click(function () {
                var phone = $("#phone").val();
                var password = $("#password").val();
                if (phone == '' || password == '') {
                    alert("请填写手机号和密码");
                } else {
                    $.ajax({
                        url: '/signin',
                        type: 'POST',
                        data: JSON.stringify({
                            phone: phone,
                            password: password,
                        }),
                        dateType:'json',
                        success: function (data) {
                                document.location.href = '/Home/Student';
                        },
                        error: function (mesg) {
                            alert(mesg);
                        }
                    });
                }
            });
        });
    </script>
</body>
</html>


