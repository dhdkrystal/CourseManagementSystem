<!doctype html>
<html>
<head>
    <meta charset="UTF-8">
    <title>Untitled Document</title>
    <link href="~/Content/TeacherBindingUI.css" rel="stylesheet" type="text/css">
    <link rel="stylesheet" href="http://cdn.static.runoob.com/libs/bootstrap/3.3.7/css/bootstrap.min.css">
    <script src="http://cdn.bootcss.com/jquery/3.2.1/jquery.min.js"></script>
    <!-- Bootstrap -->
</head>

<body class="body">
    <div class="PictureDiv">
        <!-- 背景图的div -->
        <img class="bulb" src="~/Content/images/bulb.png" />
        <img src="~/Content/images/background.jpg" class="Picture" />
        <div class="title">请先绑定您的账号</div>
    </div>
    <div class="hrDiv"></div>
    <div class="mainView">
        <div class="studentID">教工号 :</div>
        <input class="inputstudentID" id="number"></input>
        <img class="tipIcon" src="~/Content/images/warning.png
		"></img>
        <div class="tipFont">提交后不能修改</div>
        <div class="Name" >姓名 :</div>
        <input class="inputName"id="name"></input>
        <div class="school" >
            学校 :

        </div>
        <input class="inputSchool" id="school"><img class="selectSchoolIcon" src="~/Content/images/ninedot.png"></img></input>
        <div class="comfirmDiv">
            <button class="confirmButton" id="teacherBinding">绑定</button>
        </div>

    </div>

    <script>
       $(document).ready(function () {
           $("#teacherBinding").click(function () {
               var number = $("#number").val();
               var name = $("#name").val();
               var school = $("#schoool").val();
               if (number == '' || name == '' || school == '') {
                   alert("请填写完整");
               } else {
                   $.ajax({
                       url: '/me',
                       type: 'PUT',
                       data: {
                           'number': number,
                           'name': name,
                           'school': school,
                       },
                       dateType: 'json',
                       success: function (data) {
                           alert("注册成功，请登录");
                           document.location.href = '/Account/Login';
                       },
                       error: function (mesg) {
                           alert(mesg);
                       }
                   });
               }
           });
       });
    </script>

</body>
</html>


